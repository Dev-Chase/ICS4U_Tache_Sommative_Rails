<%= form_with(model: course_session) do |form| %>
  <% if course_session.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course_session.errors.count, "error") %> prohibited this course_session from being saved:</h2>

      <ul>
        <% course_session.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :course_id, style: "display: block" %>
    <%= form.collection_select :course_id, Course.order(:subject_id, :code, :name), :id, :name, prompt:"Choisissez un cours" %>
  </div>

  <div>
    <%= form.label :room_id, style: "display: block" %>
    <%= form.collection_select :room_id, Room.order(:building_id, :floor_level, :code), :id, :name, prompt:"Choisissez un locale" %>
  </div>

  <div>
    <%= form.label :start_time, style: "display: block" %>
    <%= form.time_field :start_time %>
  </div>

  <div>
    <%= form.label :duration, style: "display: block" %>
    <%= form.number_field :duration %>
  </div>

  <div>
    <%= form.label :day_of_week, style: "display: block" %>
    <%= form.number_field :day_of_week %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
