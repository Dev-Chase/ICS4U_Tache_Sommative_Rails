<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :code, style: "display: block" %>
    <%= form.text_field :code %>
  </div>

  <div>
    <%= form.label :school_year, style: "display: block" %>
    <%= form.text_field :school_year %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :required_equipment, style: "display: block" %>
    <%= form.text_field :required_equipment %>
  </div>

  <div>
    <%= form.label :teacher_id, style: "display: block" %>
    <%= form.collection_select :teacher_id, Teacher.order(:first_name, :last_name), :id, :full_name, prompt:"Choisissez un enseignant" %>
  </div>

  <div>
    <%= form.label :subject_id, style: "display: block" %>
    <%= form.collection_select :subject_id, Subject.order(:name), :id, :name, prompt:"Choisissez un domaine" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
