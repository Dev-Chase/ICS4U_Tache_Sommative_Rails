<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :code, style: "display: block" %>
    <%= form.text_field :code %>
  </div>

  <div>
    <%= form.label :floor_level, style: "display: block" %>
    <%= form.number_field :floor_level %>
  </div>

  <div>
    <%= form.label :building_id, style: "display: block" %>
    <%= form.collection_select :building_id, Building.order(:name), :id, :name, prompt:"Choisissez un batiment" %>
  </div>

  <div>
    <%= form.label :directions, style: "display: block" %>
    <%= form.text_field :directions %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
