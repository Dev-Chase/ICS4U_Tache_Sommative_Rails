<%= form_with(model: student_course) do |form| %>
  <% if student_course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(student_course.errors.count, "error") %> prohibited this student_course from being saved:</h2>

      <ul>
        <% student_course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :course_id, style: "display: block" %>
    <%= form.collection_select :course_id, Course.order(:subject_id, :code, :name), :id, :name, prompt:"Choisissez un cours" %>
  </div>

  <div>
    <%= form.label :student_id, style: "display: block" %>
    <%= form.collection_select :student_id, Student.order(:first_name, :last_name), :id, :full_name, prompt:"Choisissez un eleve" %>
  </div>

  <div>
    <%= form.label :average_grade, style: "display: block" %>
    <%= form.number_field :average_grade %>
  </div>

  <div>
    <%= form.label :credit_obtained, style: "display: block" %>
    <%= form.check_box :credit_obtained %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
